[bar/example]
monitor = ${env:MONITOR}

; Require the monitor to be in connected state
; monitor-strict = true
width = 100%
height = 2.5%
; offset-x = 1%

; Prefer fixed center position for the `modules-center` block.
; The center block will stay in the middle of the bar whenever
; possible. It can still be pushed around if other blocks need
; more space.
; When false, the center block is centered in the space between
; the left and right block.
; fixed-center = true

line-size = 3

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
;
; Available positions:
;   left
;   center
;   right
;   none
tray-position = right
; tray-offset-x = 50
tray-padding = 1
; tray-padding = 1

padding-right = 2

; padding-left = 1
; padding-right = 1

module-margin-right = 3

; font-N = <fontconfig pattern>;<vertical offset>
font-0 = "Meslo LGS Nerd Font:size=12;3"
; font-1 = "FontAwesome:size=10;3"

; separator = " "
; module-margin = 1
separator-foreground = #75715E ;${colors.disabled}
modules-left = i3
modules-center = date
modules-right = pulseaudio memory cpu temperature network

[module/date]
type = internal/date

; Seconds to sleep between updates
; Default: 1.0
interval = 1.0

; See "https://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; date = %Y-%m-%d%
date = %a, %b %d
date-alt = ${module/date.date}

; Optional time format
; time = %H:%M
time = %I:%M:%S %p
time-alt = %I:%M %p
label = ï—¯ %date% %time%
label-foreground = #A1EFE4

; format = %{F#FF7730}%{T3}ï—¯%{T-}%{F-} <label>
; label = %{F#FF7730}%date% %{F-} %{F#afbedd}%time%%{F-}
; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
; date-alt = %A, %d %B %Y
; time-alt = %H:%M:%S

; type = internal/date
; interval = 1
; time = %H:%M

[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
; index-sort = true

; Create click handler used to focus workspace
; Default: true
; enable-click = false

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
; wrapping-scroll = false

; Set the scroll cycle direction
; Default: true
; reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;â™š will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
; fuzzy-match = true

; ws-icon-0 = 1;1
; ws-icon-1 = 2;1
; ws-icon-2 = 3;1
; ws-icon-3 = 4;1
; ws-icon-4 = 5;1
; ws-icon-default =

label-urgent = %index%
label-urgent-padding = 1
; label-urgent-background = #EF2831
label-urgent-underline = #F92672

label-mode-padding = 1

label-focused = %index%
label-focused-background = #F27361
; label-focused-underline= #a65e92
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-background = ${module/i3.label-focused-background}
; label-visible-underline= #EF2831
label-visible-padding = 1

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label-foreground = #66D9EF
label = ï‹› %percentage:2%%

