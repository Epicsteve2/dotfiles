# # -hint-welcome -hint-result


XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

# Command for the status line
#   ie: i3blocks, i3status
# set $statuscmd i3blocks

# Signal used to update the status line
#   i3blocks uses SIGRTMIN+10 by default
#   i3status uses SIGUSR1 by default
# set $statussig SIGRTMIN+10

XF86AudioRaiseVolume
    i3-volume -e 750 -n -t i3blocks -u SIGRTMIN+10 up 5

XF86AudioLowerVolume
    i3-volume -e 750 -n -t i3blocks -u SIGRTMIN+10 down 5

XF86AudioMute
    i3-volume -e 750 -n -t i3blocks -u SIGRTMIN+10 mute

super XF86AudioRaiseVolume
    i3-volume -e 750 -n -t i3blocks -u SIGRTMIN+10 up 1

super XF86AudioLowerVolume
    i3-volume -e 750 -n -t i3blocks -u SIGRTMIN+10 down 1

Caps_Lock
    ~/.config/i3/scripts/dunst-caps-lock.sh

Num_Lock
    ~/.config/i3/scripts/dunst-num-lock.sh

super shift e
    ~/.config/i3/scripts/powermenu

super Return
    alacritty --working-directory ~

Print
    flameshot gui -p ~/Pictures/screenshots

# shift+Print
#     flameshot screen -p ~/Pictures/screenshots

# ctrl+shift+Print
#     flameshot full -p ~/Pictures/screenshots
super y
    dunstctl history-pop

super Print
    ~/.config/i3/scripts/screenshot

super v
    copyq toggle

super d
    rofi -modi drun -show drun -config ~/.config/rofi/rofidmenu.rasi

super ctrl e
    rofi -modi "emoji:rofimoji" -show emoji -config ~/.config/rofi/rofikeyhint.rasi

super shift v
    rofimoji --selector-args "-config ~/.config/rofi/rofikeyhint.rasi"  --prompt "alt+c copy | alt+<num> insert recent | alt+u unicode"

super shift d
    rofi -show window -config ~/.config/rofi/rofidmenu.rasi

alt Tab
    rofi -show window -config ~/.config/rofi/rofidmenu.rasi

super l
    ~/.config/i3/scripts/blur-lock

super shift r
   ~/.config/i3/scripts/reload

