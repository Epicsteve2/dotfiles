globalias() {
  EXPAND_ALIASES=(g n v vi vim d dc s tf t lg ldk j c)
   if [[ ${EXPAND_ALIASES[(ie)$LBUFFER]} -le ${#EXPAND_ALIASES} ]]; then
     zle _expand_alias
     zle expand-word
   fi
   zle self-insert
}
zle -N globalias
bindkey " " globalias

export MANPAGER="sh -c 'col --no-backspaces --spaces | bat --language man --plain'"
